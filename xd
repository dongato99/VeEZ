const HTMLWebpackplugin = require('html-webpack-plugin')

module.exports = {
   entry: './src/main.js',
   output:{
       path: __dirname + '/dist',
       filename: 'bundle.js'
   },
   plugins: [
       new HTMLWebpackplugin({
           template: './src/index.html'
       })
   ],
   module: {
    rules: [
      {
        test: /\.html$/i,
        loader: 'html-loader',
      },
    ],
  },
  };